{
  "schemaVersion": 1,
  "id": "rpo",
  "version": "${version}",

  "name": "ResourcePackOrganizerCustom",
  "description": "Enhances the Resource Pack menu by adding folder support for easier pack organization, ability to search packs by name or description, new sorting options, and quick refresh button directly in the GUI.",
  "icon": "rpo_logo.png",
  "authors": [
    "dodi"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/CoolGo1425/ResourcePackOrganizerCustom"
  },

  "license": "MIT License",


  "environment": "*",
  "entrypoints": {
    "main": [
      "net.dodi.rpo.ResourcePackOrganizerCustom"
    ],
    "client": [
      "net.dodi.rpo.rpoClient"
    ]
  },
  "mixins": [
    "rpo.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.17",
    "fabric-api": "*",
    "minecraft": "~1.19.4",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
